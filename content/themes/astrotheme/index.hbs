{{! USER CONFIGURATION OF THIS PAGE IS NOT REQUIRED }}
{{!< default}}

<div class="index-cover" style="background-image: url(http://bitcoinalliance.co.uk/content/images/2014/Jul/4220756764_33a49614ae_b.jpg);">
	<a target="_blank" href="https://www.flickr.com/photos/paolomargari/4220756764" class="credit">Image &copy; Paolo Margari</a>
</div>


<section class="posts postindex wrapper">
	
	<h2>Connecting people and organisations</h2>
	<p>Working with and connecting those interested and invested in the new digital economy. The Bitcoin Alliance UK is a gathering of minds, intent on facilitating our decentralised future.</p>

	<a href="/resources" class="smallbutton lightgrey btn"><i class="fa fa-book"></i>Resources</a>
	<a href="/events" class="smallbutton lightgrey btn"><i class="fa fa-calendar"></i>Events</a>
	<a href="/join" class="smallbutton lightgrey btn"><i class="fa fa-group"></i>Join</a> 

	{{#foreach posts}}
	<article class="post {{post_class}}">
		<header>
			<div class="feature"><span>Featured</span><i class="fa fa-bookmark fa-lg"></i></div>
			<h2>{{tags}}</h2>
			<h1><a href="{{url}}">{{{title}}}</a></h1>
			<span>
				Posted on <i class="fa fa-clock-o"></i><time datetime="{{date format='YYYY-MM-DD'}}">{{date format="MMMM Do, YYYY"}}</time>.
			</span>
			<p>{{excerpt characters="260"}}&hellip;</p>
		</header>
	</article>
	{{/foreach}}

	{{pagination}}

</section>
